{
  "name": "academia-test-suite",
  "version": "1.0.0",
  "description": "Test suite for students and plans modules",
  "main": "scripts/run-all-tests.js",
  "scripts": {
    "test": "node scripts/run-all-tests.js",
    "test:backend": "node scripts/run-all-tests.js backend",
    "test:frontend": "node scripts/run-all-tests.js frontend",
    "test:simple": "node scripts/run-all-tests.js simple",
    "test:quick": "node scripts/test-quick.js",
    "test:jest": "jest tests/integration/students-plans-backend.test.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk scripts/run-all-tests.js"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.12"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js", "**/tests/**/*.test.ts"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "src/**/*.ts",
      "servers/**/*.js",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "testTimeout": 30000
  }
}
