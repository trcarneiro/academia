{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/config": ["src/config/index.ts"],
      "@/config/*": ["src/config/*"],
      "@/types/*": ["src/types/*"],
      "@/utils/*": ["src/utils/*"],
      "@/services/*": ["src/services/*"],
      "@/controllers/*": ["src/controllers/*"],
      "@/middlewares/*": ["src/middlewares/*"],
      "@/routes/*": ["src/routes/*"],
      "@/schemas/*": ["src/schemas/*"]
    },
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "allowUnusedLabels": true,
    "allowUnreachableCode": true,
    "noEmit": false,
    "isolatedModules": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/controllers/graduationController.ts",
    "src/routes/curriculum-agent.ts",
    "src/routes/agentOrchestrator.ts",
    "src/routes/pedagogical.ts",
    "src/services/gradService.ts",
    "src/services/activityExecService.ts",
    "src/services/agentAutomationService.ts",
    "src/services/progressionService.ts",
    "src/services/challengeService.ts",
    "src/services/csvImportService.ts",
    "src/services/evaluationService.ts",
    "src/services/googleAdsService.ts",
    "src/services/enhancedCourseImportService.ts",
    "src/server-fixed.ts",
    "src/scripts/seedFinancial.ts"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
