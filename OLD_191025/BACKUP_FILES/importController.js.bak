            btnBack.addEventListener('click', () => this.previousStep());
        }

        // Bot√£o Pr√≥ximo
        const btnNext = this.container.querySelector('#btn-next');
        if (btnNext) {
            btnNext.addEventListener('click', () => this.nextStep());
