    /**
     * Configura abas superiores (Importar x Gerenciar)
     */
    setupTopTabs() {
        const tabs = this.container.querySelectorAll('#import-top-tabs .module-tab');
        if (!tabs.length) return;
        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                const tabKey = tab.dataset.tab;
                if (!tabKey || tabKey === this.currentTopTab) return;
                this.currentTopTab = tabKey;
                tabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
                if (tabKey === 'import') {
                    this.loadUploadView();
                } else {
                    this.loadAsaasManagementView();
                }
            });
        });
    }

    /**
     * Configurar event listeners
     */
    setupEventListeners() {
        // Bot√£o Voltar
        const btnBack = this.container.querySelector('#btn-back');
