    async renderAsaasKeyValidation() {
        const el = this.container.querySelector('#asaas-key-status');
        if (!el) return;
        if (!this.moduleAPI) {
            el.innerHTML = '<div class="module-isolated-error-state">API n√£o inicializada</div>';
            return;
        }
        await this.moduleAPI.fetchWithStates('/api/asaas/validate-key', {
            loadingElement: el,
            onSuccess: (res) => {
                const data = res?.data || res;
                const ok = res?.success ?? data?.success ?? true;
                el.innerHTML = `
                    <div class="validation-message ${ok ? 'success' : 'error'}">
                        <span>${ok ? '‚úÖ' : '‚ùå'}</span>
                        ${(res?.message || data?.message) ?? (ok ? 'Valida√ß√£o conclu√≠da' : 'Falha na valida√ß√£o')}
                    </div>
                `;
            },
            onEmpty: () => { el.innerHTML = '<div class="validation-message warning">Sem dados de valida√ß√£o</div>'; },
            onError: (err) => { el.innerHTML = `<div class=\"validation-message error\">Erro: ${err?.message || 'Falha ao validar chave'}</div>`; }
        });
    }

    async renderAsaasLocalList({ offset = 0, limit = 20 } = {}) {
        const wrapper = this.container.querySelector('#asaas-local-list');
        const qInput = this.container.querySelector('#asaas-q');
        if (!wrapper) return;
        const q = qInput ? encodeURIComponent(qInput.value || '') : '';
        const url = `/api/asaas/customers/local?limit=${limit}&offset=${offset}${q ? `&q=${q}` : ''}`;

        if (!this.moduleAPI) {
            wrapper.innerHTML = '<div class="module-isolated-error-state">API n√£o inicializada</div>';
            return;
        }

        await this.moduleAPI.fetchWithStates(url, {
            loadingElement: wrapper,
            onSuccess: (res) => {
                const payload = res?.data || res;
                const items = payload?.items || payload?.data?.items || [];
                const total = payload?.total ?? payload?.data?.total ?? 0;
                const curOffset = payload?.offset ?? payload?.data?.offset ?? offset;
                const curLimit = payload?.limit ?? payload?.data?.limit ?? limit;

                if (!items.length) {
                    wrapper.innerHTML = '<div class="module-isolated-empty-state">Nenhum cliente encontrado</div>';
                    return;
                }

                const rows = items.map(it => `
                    <tr>
                        <td>${it.name || '-'}</td>
                        <td>${it.email || '-'}</td>
                        <td>${it.cpfCnpj || '-'}</td>
                        <td>${[it.city, it.state].filter(Boolean).join(' / ') || '-'}</td>
                        <td>${new Date(it.createdAt || it.updatedAt || Date.now()).toLocaleDateString()}</td>
                    </tr>
                `).join('');

                const nextOffset = curOffset + items.length;
                const prevOffset = Math.max(curOffset - curLimit, 0);
                const hasPrev = curOffset > 0;
                const hasNext = nextOffset < total;

                wrapper.innerHTML = `
                    <div style=\"overflow:auto;\">
                        <table class=\"preview-table\">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Email</th>
                                    <th>Documento</th>
                                    <th>Cidade/UF</th>
                                    <th>Criado</th>
                                </tr>
                            </thead>
                            <tbody>${rows}</tbody>
                        </table>
                    </div>
                    <div style=\"display:flex; align-items:center; justify-content:space-between; margin-top:8px;\">
                        <button class=\"btn-import-secondary\" id=\"asaas-prev\" ${hasPrev ? '' : 'disabled'}>‚Üê Anterior</button>
                        <div>${curOffset + 1} - ${curOffset + items.length} de ${total}</div>
                        <button class=\"btn-import-secondary\" id=\"asaas-next\" ${hasNext ? '' : 'disabled'}>Pr√≥ximo ‚Üí</button>
                    </div>
                `;

                const prevBtn = wrapper.querySelector('#asaas-prev');
                const nextBtn = wrapper.querySelector('#asaas-next');
                if (prevBtn) prevBtn.addEventListener('click', () => this.renderAsaasLocalList({ offset: prevOffset, limit: curLimit }));
                if (nextBtn) nextBtn.addEventListener('click', () => this.renderAsaasLocalList({ offset: nextOffset, limit: curLimit }));
            },
            onEmpty: () => { wrapper.innerHTML = '<div class="module-isolated-empty-state">Nenhum cliente encontrado</div>'; },
            onError: (err) => { wrapper.innerHTML = `<div class=\"module-isolated-error-state\">Erro ao listar clientes: ${err?.message || 'Falha'} </div>`; }
        });
    }

    /**
     * Sincroniza clientes do Asaas via API e exibe resultado
     */
    async handleAsaasSync() {
        const statusEl = this.container.querySelector('#asaas-sync-status');
        const syncBtn = this.container.querySelector('#btn-asaas-sync');
        const syncToggle = this.container.querySelector('#toggle-asaas-sync');

        // Prevenir reentr√¢ncia
        if (this.asaasSyncRunning) {
            if (statusEl) {
                statusEl.innerHTML = `
                    <div class="data-card-premium">
                        ‚è≥ Uma sincroniza√ß√£o j√° est√° em andamento...
                    </div>
                `;
            }
            return;
        }

        if (!this.moduleAPI) {
            statusEl.innerHTML = `<div class="error-state">API n√£o inicializada</div>`;
            return;
        }

        // Sinalizar carregamento na UI
        let originalBtnText = '';
        if (syncBtn) {
            originalBtnText = syncBtn.textContent;
            syncBtn.textContent = 'Sincronizando...';
            syncBtn.disabled = true;
            syncBtn.classList.add('is-loading');
        }
        if (syncToggle) {
            syncToggle.disabled = true;
        }
        if (statusEl) {
            statusEl.innerHTML = `
                <div class="import-loading">
                    <div class="spinner"></div>
                    <p>Sincronizando clientes do Asaas...</p>
                </div>
            `;
        }

        this.asaasSyncRunning = true;

        await this.moduleAPI.saveWithFeedback('/api/asaas/sync/customers', {}, {
            method: 'POST',
            onSuccess: (result) => {
                const data = result?.data || result; // normalizado + fallback
                const imported = data?.imported ?? 0;
                const updated = data?.updated ?? 0;
                const totalRemote = data?.totalRemote ?? (imported + updated);
                statusEl.innerHTML = `
                    <div class="data-card-premium">
                        <h4>‚úÖ Sincroniza√ß√£o conclu√≠da</h4>
                        <ul>
                            <li><strong>Importados:</strong> ${imported}</li>
                            <li><strong>Atualizados:</strong> ${updated}</li>
                            <li><strong>Total (remoto):</strong> ${totalRemote}</li>
                        </ul>
                    </div>
                `;
            },
            onError: (error) => {
                statusEl.innerHTML = `
                    <div class="module-isolated-error-state">
                        <span class="module-isolated-error-icon">‚ùå</span>
                        <span class="module-isolated-error-message">${error?.message || 'Falha na sincroniza√ß√£o com o Asaas'}</span>
                    </div>
                `;
            }
        }).finally(() => {
            // Restaurar UI e liberar reentr√¢ncia
            if (syncBtn) {
                syncBtn.textContent = originalBtnText || 'Sincronizar agora';
                syncBtn.disabled = false;
                syncBtn.classList.remove('is-loading');
            }
            if (syncToggle) {
                syncToggle.disabled = false;
            }
            this.asaasSyncRunning = false;
        });
    }

    /**
     * Processar upload de arquivo
     */
    async handleFileUpload(file) {
        try {
            console.log('üìÅ Processando upload do arquivo:', file.name);
            
            // Show loading
            const uploadArea = this.container.querySelector('#upload-area');
            uploadArea.innerHTML = `
                <div class="import-loading">
                    <div class="spinner"></div>
                    <p>Processando arquivo CSV...</p>
                </div>
            `;

            // Read file content
            const content = await this.readFileContent(file);
            
            // Parse CSV (simplified)
            const data = this.parseCSVContent(content);
            
            this.uploadedData = {
                filename: file.name,
                size: file.size,
                data: data,
                uploadedAt: new Date().toISOString()
            };

            console.log('‚úÖ Arquivo processado com sucesso:', this.uploadedData);
            
            // Move to validation step
            this.nextStep();
            
        } catch (error) {
            console.error('‚ùå Erro no upload:', error);
            this.showError('Erro ao processar arquivo: ' + error.message);
            this.loadUploadView(); // Reset upload view
        }
    }

    /**
     * Ler conte√∫do do arquivo
     */
    readFileContent(file) {
        return new Promise((resolve, reject) => {
            const reader = new FileReader();
            reader.onload = (e) => resolve(e.target.result);
            reader.onerror = () => reject(new Error('Erro ao ler arquivo'));
            reader.readAsText(file);
        });
    }

    /**
     * Parse simplificado do CSV
     */
    parseCSVContent(content) {
        const lines = content.split('\n').filter(line => line.trim());
        if (lines.length < 2) {
            throw new Error('Arquivo CSV deve ter pelo menos 2 linhas (cabe√ßalho + dados)');
        }

        const headers = lines[0].split(',').map(h => h.trim().replace(/['"]/g, ''));
        const data = [];

        // Detectar formato (Asaas vs Padr√£o)
        const formatType = this.detectCSVFormat(headers);
        console.log('üîç Formato detectado:', formatType);

        for (let i = 1; i < lines.length; i++) {
            const values = this.parseCSVLine(lines[i]);
            const row = {};
            
            headers.forEach((header, index) => {
                row[header] = values[index] ? values[index].trim().replace(/['"]/g, '') : '';
            });
            
            // Aplicar mapeamento se necess√°rio
            const mappedRow = this.mapRowToStandardFormat(row, formatType);
            data.push(mappedRow);
        }

        return data;
    }

    /**
     * Parse mais robusto de linha CSV (lida com v√≠rgulas dentro de aspas)
     */
    parseCSVLine(line) {
        const values = [];
        let current = '';
        let inQuotes = false;
        
        for (let i = 0; i < line.length; i++) {
            const char = line[i];
            
            if (char === '"') {
                inQuotes = !inQuotes;
            } else if (char === ',' && !inQuotes) {
                values.push(current);
                current = '';
            } else {
                current += char;
            }
        }
        
        values.push(current); // √öltimo valor
        return values;
    }

    /**
     * Detectar formato do CSV
     */
    detectCSVFormat(headers) {
        const asaasFields = ['Nome', 'Email', 'Celular', 'CPF ou CNPJ', 'Rua', 'N√∫mero', 'Bairro', 'Cidade', 'Valor a vencer'];
        const standardFields = ['nome', 'email', 'telefone', 'documento', 'endereco', 'valor_mensalidade'];
        
        const asaasMatches = asaasFields.filter(field => headers.includes(field)).length;
        const standardMatches = standardFields.filter(field => headers.includes(field)).length;
        
        if (asaasMatches >= 5) {
            return 'asaas';
        } else if (standardMatches >= 3) {
            return 'standard';
        } else {
            return 'unknown';
        }
    }

    /**
     * Mapear linha para formato padr√£o
     */
    mapRowToStandardFormat(row, formatType) {
        if (formatType === 'asaas') {
            return this.mapAsaasToStandard(row);
        } else if (formatType === 'standard') {
            return row; // J√° est√° no formato correto
        } else {
            // Tentar mapeamento inteligente
            return this.smartMapping(row);
        }
    }

    /**
     * Mapear formato Asaas para padr√£o
     */
    mapAsaasToStandard(asaasRow) {
        // Construir endere√ßo completo
        const enderecoPartes = [
            asaasRow['Rua'],
            asaasRow['N√∫mero'],
            asaasRow['Complemento'],
            asaasRow['Bairro'],
            asaasRow['Cidade'],
            asaasRow['CEP'],
            asaasRow['Estado']
        ].filter(parte => parte && parte.trim() && parte.trim() !== '');
        
        const endereco = enderecoPartes.join(', ');

        // Limpar valor monet√°rio
        let valorMensalidade = '0';
        if (asaasRow['Valor a vencer']) {
            valorMensalidade = asaasRow['Valor a vencer']
                .replace(/[R$\s]/g, '')
                .replace(',', '.')
                .trim();
        }

        // Telefone: priorizar celular, depois fone
        const telefone = asaasRow['Celular'] || asaasRow['Fone'] || '';

        return {
            nome: asaasRow['Nome'] || '',
            email: asaasRow['Email'] || '',
            telefone: telefone,
            documento: asaasRow['CPF ou CNPJ'] || '',
            endereco: endereco,
            valor_mensalidade: valorMensalidade,
            empresa: asaasRow['Empresa'] || '',
            // Campos extras do Asaas para refer√™ncia
            _original_identificador: asaasRow['Identificador externo'] || '',
            _original_valor_vencido: asaasRow['Valor vencido'] || '',
            _original_valor_pago: asaasRow['Valor pago'] || ''
        };
    }

    /**
     * Mapeamento inteligente para formatos desconhecidos
     */
    smartMapping(row) {
        const mapped = {};
        
        // Mapear campos comuns
        Object.keys(row).forEach(key => {
            const lowerKey = key.toLowerCase();
            
            if (lowerKey.includes('nome') || lowerKey.includes('name')) {
                mapped.nome = row[key];
            } else if (lowerKey.includes('email') || lowerKey.includes('e-mail')) {
                mapped.email = row[key];
            } else if (lowerKey.includes('telefone') || lowerKey.includes('celular') || lowerKey.includes('phone')) {
                mapped.telefone = row[key];
            } else if (lowerKey.includes('cpf') || lowerKey.includes('cnpj') || lowerKey.includes('documento')) {
                mapped.documento = row[key];
            } else if (lowerKey.includes('endereco') || lowerKey.includes('address') || lowerKey.includes('rua')) {
                mapped.endereco = row[key];
            } else if (lowerKey.includes('valor') || lowerKey.includes('mensalidade') || lowerKey.includes('price')) {
                mapped.valor_mensalidade = row[key];
            }
        });
        
        return { ...row, ...mapped }; // Manter campos originais + mapeados
    }

    /**
     * Carregar view de valida√ß√£o (Passo 2)
     */
    loadValidationView() {
        this.updateProgressSteps(2);
        
        const content = this.container.querySelector('#import-content');
        content.innerHTML = `
            <div class="validation-view fade-in">
                <div class="import-stats">
                    <div class="stat-card-import">
                        <div class="stat-icon">üìä</div>
                        <div class="stat-value">${this.uploadedData.data.length}</div>
                        <div class="stat-label">Registros Encontrados</div>
                    </div>
                    <div class="stat-card-import">
                        <div class="stat-icon">‚úÖ</div>
                        <div class="stat-value" id="valid-count">0</div>
                        <div class="stat-label">Registros V√°lidos</div>
                    </div>
                    <div class="stat-card-import">
                        <div class="stat-icon">‚ö†Ô∏è</div>
                        <div class="stat-value" id="error-count">0</div>
                        <div class="stat-label">Erros Encontrados</div>
                    </div>
                </div>

                <div class="data-preview-premium">
                    <h3>üîç Resultado da Valida√ß√£o</h3>
                    <div id="validation-results">
