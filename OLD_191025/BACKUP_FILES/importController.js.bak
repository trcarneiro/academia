            }
            throw error;
        }
    }
    // removed stray setupTopTabs call (now inside init)

    /**
     * Inicializa API client para o m√≥dulo
     */
    async initializeAPI() {
        // Aguarda API Client global
        await new Promise((resolve) => {
            if (window.createModuleAPI) return resolve();
            const it = setInterval(() => {
                if (window.createModuleAPI) {
                    clearInterval(it);
                    resolve();
                }
            }, 100);
        });

        try {
            this.moduleAPI = window.createModuleAPI('Import');
            console.log('üåê ImportController: API pronta');
        } catch (e) {
            console.warn('‚ö†Ô∏è N√£o foi poss√≠vel inicializar ModuleAPI, seguir√° sem integra√ß√µes autom√°ticas');
        }
    }
