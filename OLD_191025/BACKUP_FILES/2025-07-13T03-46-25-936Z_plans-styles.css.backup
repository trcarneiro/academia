olor: #EF4444;\n    background: rgba(239, 68, 68, 0.1);\n    border-radius: 8px;\n    border: 1px solid rgba(239, 68, 68, 0.2);\n}\n\n/* ğŸ”’ ProteÃ§Ã£o contra override */\n.plans-container-isolated * {\n    box-sizing: border-box;\n}\n\n/* ğŸ“ DocumentaÃ§Ã£o visual */\n.plans-container-isolated::after {\n    content: 'PlansManager v1.0.0';\n    position: absolute;\n    bottom: 4px;\n    right: 8px;\n    font-size: 0.6rem;\n    color: rgba(148, 163, 184, 0.3);\n    pointer-events: none;\n}"
