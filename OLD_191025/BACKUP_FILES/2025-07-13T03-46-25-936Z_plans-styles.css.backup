: relative;\n    overflow: hidden;\n}\n\n.plans-container-isolated .plan-card-isolated::before {\n    content: '';\n    position: absolute;\n    top: 0;\n    left: 0;\n    right: 0;\n    height: 4px;\n    background: linear-gradient(90deg, #3B82F6, #10B981);\n    transform: scaleX(0);\n    transform-origin: left;\n    transition: transform 0.3s ease;\n}\n\n.plans-container-isolated .plan-card-isolated:hover {\n    transform: translateY(-4px);\n    border-color: #3B82F6;\n    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);\n}\n\n.plans-container-isolated .plan-card-isolated:hover::before {\n    transform: scaleX(1);\n}\n\n/* ğŸ“ Header do card */\n.plans-container-isolated .plan-header {\n    display: flex;\n    justify-content: space-between;\n    align-items: flex-start;\n    margin-bottom: 1rem;\n}\n\n.plans-container-isolated .plan-header h4 {\n    color: #F8FAFC;\n    margin: 0;\n    font-size: 1.125rem;\n    font-weight: 600;\n    flex: 1;\n}\n\n.plans-container-isolated .plan-price {\n    color: #10B981;\n    font-size: 1.5rem;\n    font-weight: bold;\n    margin-left: 1rem;\n}\n\n/* ğŸ“„ DescriÃ§Ã£o do plano */\n.plans-container-isolated .plan-description {\n    color: #94A3B8;\n    font-size: 0.875rem;\n    line-height: 1.5;\n    margin-bottom: 1.5rem;\n}\n\n/* âœ… Features do plano */\n.plans-container-isolated .plan-features {\n    margin-bottom: 1.5rem;\n}\n\n.plans-container-isolated .plan-features div {\n    color: #CBD5E1;\n    font-size: 0.875rem;\n    margin-bottom: 0.5rem;\n    display: flex;\n    align-items: center;\n    gap: 0.5rem;\n}\n\n.plans-container-isolated .plan-features div::before {\n    content: 'âœ“';\n    color: #10B981;\n    font-weight: bold;\n}\n\n/* ğŸ¯ BotÃ£o de seleÃ§Ã£o */\n.plans-container-isolated .plan-select-btn {\n    width: 100%;\n    background: linear-gradient(135deg, #3B82F6, #2563EB);\n    color: white;\n    border: none;\n    padding: 0.75rem 1rem;\n    border-radius: 8px;\n    font-weight: 600;\n    cursor: pointer;\n 